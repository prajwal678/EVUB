{
    "compilerOptions": {
      "target": "ESNext",                     // Use the latest ECMAScript features
      "module": "ESNext",                     // Use ES modules for compatibility with `import`/`export`
      "moduleResolution": "node",             // Resolve modules like Node.js would
      "esModuleInterop": true,                // Enable interoperability between CommonJS and ES Modules
      "allowSyntheticDefaultImports": true,   // Allow default imports from modules without a default export
      "strict": true,                         // Enable all strict type-checking options
      "skipLibCheck": true,                   // Skip checking of declaration files
      "forceConsistentCasingInFileNames": true, // Ensure file name casing is consistent
      "resolveJsonModule": true,              // Allow importing `.json` files
      "sourceMap": true,                      // Generate source maps for easier debugging
      "outDir": "./dist",                     // Output directory for compiled files
      "rootDir": "./src",                     // Root directory for your source files
      "baseUrl": ".",                         // Base directory for resolving non-relative module names
      "paths": {
        "*": ["node_modules/*"]               // Resolve modules from the node_modules directory
      }
    },
    "include": ["src/**/*.ts"],                // Include all TypeScript files in the `src` folder
    "exclude": ["node_modules"]                // Exclude `node_modules`
  }
  